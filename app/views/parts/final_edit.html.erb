<div class="first_assessment">
  <p>
    First assessment:<br>
    <%= @part.first_assessment %>
  </p>
</div>

<%= form_with url: "/parts/#{@part.id}/final", method: :put, local: true do |form| %>
  <%= form.label :final_assessment %>
  <%= form.text_field :final_assessment %><br>
  <%= form.label :score %>
  <%= form.number_field :score, step: 0.5, min: 0, max: 1 %><br>
  <%= form.submit "Save assessment" %>
<% end %>
