<div class="first_assessment">
  <p>
    <span style="font-weight: bold;">First assessment:</span><br>
    <%= @part.first_assessment %>
  </p>
</div>

<%= form_with url: part_final_path(@part), method: :put, local: true do |form| %>
  <%= form.hidden_field :user_id, value: @user.id %>
  <%= form.label :final_assessment %><br>
  <%= form.text_area :final_assessment, size: "100x10", value: @part.final_assessment  %><br><br>
  <%= form.label :score %><br>
  <%= form.number_field :score, step: 0.5, min: 0, max: 1, value: @part.score %><br><br>
  <%= form.submit "Save assessment" %>
<% end %>
